# Shift focus
lcmd - up : kwmc window -f north
lcmd - right : kwmc window -f east
lcmd - down : kwmc window -f south
lcmd - left : kwmc window -f west

# Swap window
lcmd + shift - up : kwmc window -s north
lcmd + shift - right : kwmc window -s east
lcmd + shift - down : kwmc window -s south
lcmd + shift - left : kwmc window -s west

# Move window
lalt + shift - up : kwmc window -m north
lalt + shift - right : kwmc window -m east
lalt + shift - down : kwmc window -m south
lalt + shift - left : kwmc window -m west

# Open terminal with alt-enter
lcmd - return : open -na /Applications/Utilities/Terminal.app

# Toggle split mode
lalt - s : kwmc window -c split-mode toggle

# Toggle fullscreen
lalt - f : kwmc window -z fullscreen

# Float mode
lcmd + shift - f : kwmc window -t focused
