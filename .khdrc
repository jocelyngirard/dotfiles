# Enable kwm compatibility mode
khd kwm on

# Change focus
lcmd - up : kwmc window -f north
lcmd - right : kwmc window -f east
lcmd - down : kwmc window -f south
lcmd - left : kwmc window -f west

# Swap window
lcmd + shift - up : kwmc window -s north
lcmd + shift - right : kwmc window -s east
lcmd + shift - down : kwmc window -s south
lcmd + shift - left : kwmc window -s west

# Open terminal with alt-enter
lcmd - return : open -na /Applications/Utilities/Terminal.app

### Change window modes

# Toggle split mode
lalt - s : kwmc window -c split-mode toggle

# Toggle fullscreen
lalt - f : kwmc window -z fullscreen

# Float mode
lcmd + shift - f : kwmc window -t focused

### Change desktop space modes

# Set Space Tiling Mode To BSP
lalt + shift - a : kwmc space -t bsp

# Set Space Tiling Mode To Monocle
lalt + shift - s : kwmc space -t monocle

# Set Space Tiling Mode To Floating
lalt + shift - d : kwmc space -t float

# Move Focused Window To Space
lalt + shift - left : kwmc window -m space left
lalt + shift - right : kwmc window -m space right
